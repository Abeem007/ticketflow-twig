 {% extends "layout.twig" %}
{% block title %}Login | TicketFlow{% endblock %}
{% block content %}

<section class="auth-section">
  <div class="auth-container">
    <div id="toast" class="toast hidden"></div>
    <h1 class="auth-title">Welcome Back</h1>
    <form id="loginForm" action="{{ base_path ?? '' }}/auth/login" method="POST" class="auth-form">
      <div class="form-group">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" />
        <p id="emailError" class="error-text"></p>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" />
        <p id="passwordError" class="error-text"></p>
      </div>
      <button type="submit" class="btn-primary2">Log In</button>
    </form>
    <p class="auth-switch">
      Donâ€™t have an account?
      <a href={{ base_path }}/auth/signup class="link">Sign up</a>
    </p>
  </div>
</section>
{% endblock %}
{% block scripts %}
  <script src="/ticketflow-twig/assets/js/auth.js"></script>
{% endblock %}