{% extends "layout.twig" %}

{% block title %}Sign Up | TicketFlow{% endblock %}

{% block content %}
<section class="auth-section">
  <div class="auth-container">
    <div id="toast" class="toast hidden"></div>
    
    <h1 class="auth-title">Create an Account</h1>
    
    <form id="signupForm" class="auth-form">
      <div class="form-group">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" required />
        <p id="emailError" class="error-text"></p>
      </div>
      
      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" required />
        <p id="passwordError" class="error-text"></p>
      </div>
      
      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input id="confirmPassword" name="confirmPassword" type="password" required />
        <p id="confirmError" class="error-text"></p>
      </div>
      
      <button type="submit" class="btn-primary2">Sign Up</button>
    </form>
    
    <p class="auth-switch">
      Already have an account?
      <a href="/ticketflow-twig/login.php" class="link">Log in</a>
    </p>
  </div>
</section>
{% endblock %}